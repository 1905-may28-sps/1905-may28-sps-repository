import java.util.ArrayList;
import java.util.List;

public class storePalArrList {
	static List<String> pal=new ArrayList<>();
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		List<String> word=new ArrayList<>();
		word.add("karan");
		word.add("madam");
		word.add("tom");
		word.add("civic");
		word.add("radar");
		word.add("sexes");
		word.add("jimmy");
		word.add("kayak");
		word.add("john");
		word.add("refer");
		word.add("billy");
		word.add("did");
		palStore(word);
		//System.out.println(palw.size());
	}
	public static List<String> palStore(List<String> word) {
		boolean valid=true;
		for(int i=0; i<word.size();i++) {
			String checkWord=word.get(i);
			System.out.println(checkWord);
			for (int j=0;j<checkWord.length()/2; j++) {
				if(checkWord.charAt(j)!=checkWord.charAt(checkWord.length()-j-1)){
					System.out.println(checkWord.charAt(j)+" "+checkWord.charAt(checkWord.length()-j-1));
					valid=false;	
				} 
				
			}
			System.out.println(valid);
			if(valid){
					pal.add(word.get(i));
				}
		
		
		
	}
		return pal;

}
}
